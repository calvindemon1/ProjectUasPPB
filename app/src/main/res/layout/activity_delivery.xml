<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Delivery"
    android:background="@drawable/vertical_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10.00dp"
        app:cardBackgroundColor="@color/orange"
        android:layout_margin="@dimen/_20sdp"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:textStyle="bold"
                android:text="DELIVERY"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/_5sdp"
                android:layout_margin="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/namadelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:hint="Nama Lengkap"/>

            <EditText
                android:id="@+id/alamatdelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:hint="Alamat"/>

            <EditText
                android:id="@+id/pesanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:hint="Pesanan"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">

                <EditText
                    android:id="@+id/txttanggaldelivery"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btntanggaldelivery"
                    android:text="Tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:backgroundTint="@null"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_7sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">

                <EditText
                    android:id="@+id/txtwaktudelivery"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnwaktudelivery"
                    android:text="Waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:backgroundTint="@null"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"/>

            </LinearLayout>

            <Button
                android:id="@+id/submitdelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ORDER"
                android:layout_margin="@dimen/_10sdp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:background="@color/black"
                android:textColor="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>