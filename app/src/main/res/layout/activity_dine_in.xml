<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DineIn"
    android:background="@drawable/vertical_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/orange"
        app:cardCornerRadius="10.00dp"
        android:layout_margin="@dimen/_20sdp"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@null">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="ISI FORM BERIKUT"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

            <EditText
                android:id="@+id/namadine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:hint="Nama Lengkap"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">

                <EditText
                    android:id="@+id/txttanggaldine"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btntanggaldine"
                    android:text="Tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:backgroundTint="@null"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_7sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp">

                <EditText
                    android:id="@+id/txtwaktudine"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnwaktudine"
                    android:text="Waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    app:backgroundTint="@null"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"/>

            </LinearLayout>

            <Button
                android:id="@+id/submitdine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/black"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>